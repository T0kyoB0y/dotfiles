
(defwidget dateCalendar []
  (box
    :orientation "v"
    :space-evenly false
    (box
      :space-evenly false
      :halign "center"
      :spacing 5
      (label
        :text {formattime(EWW_TIME, "%k")}
        :class "bigClock"
      )
      (label
        :text "ó°‡™"
        :class "bigSeparator"
      )
      
      (label
        :text {formattime(EWW_TIME, "%M")}
        :class "bigClock"
      )
    )

    (label :text {formattime(EWW_TIME, "%B %d")} :class "bottomClockText")    
    
    (box
      :space-evenly false
      :halign "center"
      :orientation "v"
      :spacing 5
      :class "calendarBox"
      :style "margin-top: 10px;"
      (for i in {calendar}
        (box
          :space-evenly false
          :spacing 5
          :class "calendarBoxChild"
          (for j in {i}
            (button
              :hexpand true
              :class "calendarButton ${
              j.today == 1 ? 'today' :
              j.today == -1 ? 'othermonth' : 'thismonth'
              
              }"
              
              (label
                :hexpand true
                :text {j.day}
              )
            )
          )
        )
      )
    )
    ; (weather)
  )
)
