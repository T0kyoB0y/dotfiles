(defwindow test_one
  :monitor 0
  ; :stacking "overlay"
  :windowtype "dock"
  :geometry (geometry
    :width "250px"
    :height "250px"
    :anchor "top left"
  )
  (box
    :orientation "v"
    :spacing 10
    (eventbox
      :style "background: red;"
      :ondropped "notify-send {}"
      :dragvalue "ABCDEFG"
      :dragtype "text"
    )
    (eventbox
      :style "background: blue;"
      :ondropped "notify-send {}"
      :dragvalue "123456"
      :dragtype "text"
      :cursor "grab"
    )
  )
)

(defwindow test_two
  :monitor 0
  :stacking "overlay"
  :windowtype "dock"
  :geometry (geometry
    :width "250px"
    :height "250px"
    :anchor "top right"
  )
  (box
    :orientation "v"
    (eventbox
      :style "background: red;"
      :ondropped "notify-send {}"
      :dragvalue "ABCDEFG"
      :dragtype "text"
      :cursor "grab"
      (box
        :space-evenly false
        :style "background: blue;"
        :valign "center "
        :halign "center"
        :width 25
        :height 25
      )
    )
    (eventbox
      :style "background: blue;"
      :ondropped "notify-send {}"
      :dragvalue "123456"
      :dragtype "text"
      :cursor "grab"
      (box
        :space-evenly false
        :style "background: red;"
        :valign "center "
        :halign "center"
        :width 25
        :height 25
      )
    )
  )
)
