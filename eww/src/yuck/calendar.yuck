

(defwindow weather
  :stacking "fg"
  :windowtype "dock"
  :wm-ignore true
  
  :geometry (geometry
    :x "11px"
    :y "60px"
    :width "300px"
    ; :height "380px"
    :anchor "top left"
  )
  
  (eventbox
    :onhoverlost "eww close weather"
    (weather)
  )
)


(defwidget weather []
  
  (box
    :class "weatherMainBox"
    :orientation "v"
    :space-evenly false

    (box
      :space-evenly false
      :orientation "h"
      :class "weatherTop"
      :halign "center"
      :spacing 10

      (label
        :text {weather.icon}
        :style "color: ${weather.hex};"
        :halign "start"
        :class "icon"
        :hexpand true
      )
      
      (box
        :space-evenly false
        :orientation "v"
        :valign "center"
        
        (box
          :space-evenly false
          :halign "end"
          :spacing 5
          (label :text {weather.temperature} )
          (label :text "ï‹ˆ" :class "icon")
        )
        
        (label
          :text {weather.description}
        )
      )
    )
    
    (box
      :space-evenly false
      :class "weatherQuoteBox"
      :orientation "v"
      :halign "center"

      (label
        :text {weather.quoteOne}
        :wrap true
        :halign "center"
        :class "quoteOne"
      )
      (label
        :class "quoteTwo"
        :text "\"${weather.quoteTwo}\""
        :wrap true
        :halign "center"
    )
    )
    (box
      :class "weatherBottom"
      (calendar)
    )
  )
)